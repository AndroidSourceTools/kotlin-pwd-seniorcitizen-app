<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>

		<item name="md_color_title">android:textColorPrimary</item>
		<item name="md_color_content">android:textColorSecondaryr</item>
		<item name="md_color_button_text">@color/colorPrimary</item>
	</style>

	<style name="CustomAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>

		<item name="md_color_title">android:textColorPrimary</item>
		<item name="md_color_content">android:textColorSecondaryr</item>
		<item name="md_color_button_text">@color/colorPrimary</item>

	</style>

	<!-- Text Heading Style -->
	<style name="TextPrimaryHeadingStyle" parent="Widget.AppCompat.TextView">
		<item name="android:fontFamily">@font/source_sans_pro_regular</item>
		<item name="android:textColor">@color/colorPrimaryText</item>
		<item name="android:textSize">@dimen/text_primary_heading</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextSecondaryHeadingStyle" parent="Widget.AppCompat.TextView">
		<item name="android:fontFamily">@font/source_sans_pro_regular</item>
		<item name="android:textColor">@color/colorPrimaryText</item>
		<item name="android:textSize">@dimen/text_secondary_heading</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Text Body Style -->
	<style name="TextPrimaryBodyStyle" parent="Widget.AppCompat.TextView">
		<item name="android:fontFamily">@font/open_sans_regular</item>
		<item name="android:textColor">@color/colorPrimaryText</item>
		<item name="android:textSize">@dimen/text_primary_body</item>
	</style>

	<!-- Text Button Style -->
	<style name="TextPrimaryButtonStyle" parent="Widget.AppCompat.TextView">
		<item name="android:fontFamily">@font/source_sans_pro_regular</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/colorPrimaryText</item>
		<item name="android:textSize">@dimen/text_primary_button</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Text Caption Style -->
	<style name="TextPrimaryCaptionStyle" parent="Widget.AppCompat.TextView">
		<item name="android:fontFamily">@font/open_sans_regular</item>
		<item name="android:textColor">@color/colorPrimaryText</item>
		<item name="android:textSize">@dimen/text_primary_caption</item>
	</style>

	<style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/colorPrimary</item>
	</style>

</resources>

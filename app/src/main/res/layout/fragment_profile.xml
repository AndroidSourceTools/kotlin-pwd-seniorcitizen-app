<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.seniorcitizen.app.data.model.SeniorCitizen" />
        <variable
            name="viewmodel"
            type="com.seniorcitizen.app.ui.profile.ProfileViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
	android:id="@+id/clt_parent"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/iv_bg_login"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:src="@drawable/bg_starter"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="ContentDescription" />

	<androidx.cardview.widget.CardView
			android:id="@+id/iv_profileImage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_vertical"
			android:layout_marginStart="10dp"
			android:background="@drawable/bg_field"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="1.0">

			<ImageView
				android:id="@+id/iv_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:scaleType="centerCrop"
				android:src="@mipmap/ic_launcher_round"/>

		</androidx.cardview.widget.CardView>

	<androidx.appcompat.widget.LinearLayoutCompat
		android:id="@+id/llt_profileinfo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintVertical_weight="1.0"
		app:layout_constraintTop_toBottomOf="@id/iv_profileImage"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintStart_toEndOf="parent">

		<TextView
			android:id="@+id/tv_labelName"
			style="@style/TextPrimaryHeadingStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_secondary"
			android:layout_marginTop="@dimen/margin_vertical"
			android:text="@string/profile_label_name"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintVertical_bias="0.0" />

		<TextView
			android:id="@+id/tv_labelAddress"
			style="@style/TextPrimaryHeadingStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_secondary"
			android:layout_marginTop="@dimen/margin_vertical"
			android:text="@string/profile_label_address"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintVertical_bias="0.0" />

		<TextView
			android:id="@+id/tv_labelBirthday"
			style="@style/TextPrimaryHeadingStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_secondary"
			android:layout_marginTop="@dimen/margin_vertical"
			android:text="@string/profile_label_birthday"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintVertical_bias="0.0" />

		<TextView
			android:id="@+id/tv_labelAge"
			style="@style/TextPrimaryHeadingStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_secondary"
			android:layout_marginTop="@dimen/margin_vertical"
			android:text="@string/profile_label_age"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintVertical_bias="0.0" />

		<TextView
			android:id="@+id/tv_labelSex"
			style="@style/TextPrimaryHeadingStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_secondary"
			android:layout_marginTop="@dimen/margin_vertical"
			android:text="@string/profile_label_sex"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintVertical_bias="0.0" />

		<TextView
			android:id="@+id/tv_labelIDnumber"
			style="@style/TextPrimaryHeadingStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_secondary"
			android:layout_marginTop="@dimen/margin_vertical"
			android:text="@string/profile_label_id_number"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintVertical_bias="0.0" />


	</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
